<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_leaveMessage"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/head"
        android:layout_centerVertical="true"/>
    <!--android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"没用-->
    <TextView
        android:id="@+id/tv_name_leaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李嘉图"
        android:textColor="@color/gray"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/civ_head_leaveMessage"/>
    <TextView
        android:id="@+id/tv_time_leaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012-5-7"
        android:textColor="@color/grey"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_timeMinute_leaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9:48"
        android:textColor="@color/grey"
        android:textSize="13sp"
        android:layout_alignRight="@id/tv_time_leaveMessage"
        android:layout_alignBottom="@id/tv_evaluate_leaveMessage"/>
    <TextView
        android:id="@+id/tv_evaluate_leaveMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="便宜十块我要了，便宜十块我要了，便宜十块我要了,重要的事情说三遍"
        android:ellipsize="end"
        android:layout_below="@id/tv_name_leaveMessage"
        android:layout_alignLeft="@id/tv_name_leaveMessage"
        android:layout_toLeftOf="@id/tv_timeMinute_leaveMessage"
        android:layout_marginRight="20dp"
        android:layout_marginTop="7dp"
        android:maxLines="2"

        android:textSize="17sp"
        android:textColor="@color/black"/>


    <View
        android:layout_below="@id/tv_evaluate_leaveMessage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#f0f0f0"
        />
</RelativeLayout>