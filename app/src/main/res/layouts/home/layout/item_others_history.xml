<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_head_evaluate"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/head"
        android:layout_centerVertical="true"/>
    <!--android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"没用-->
    <TextView
        android:id="@+id/tv_name_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李嘉图"
        android:textColor="@color/gray"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_toRightOf="@id/civ_head_evaluate"/>
    <TextView
        android:id="@+id/tv_time_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2012-5-7"
        android:textColor="@color/grey"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tv_content_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好评"
        android:layout_below="@id/tv_name_evaluate"
        android:layout_alignLeft="@id/tv_name_evaluate"
        android:layout_marginTop="7dp"
        android:textSize="17sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/tv_evaluateType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="默认评价"
        android:layout_below="@id/tv_name_evaluate"
        android:layout_alignLeft="@id/tv_time_evaluate"
        android:layout_alignTop="@id/tv_content_evaluate"
        android:textSize="11sp"
        android:padding="3dp"
        android:background="@drawable/button_border"
        android:textColor="@color/grey"/>
    <TextView
        android:id="@+id/tv_commodity_evaluate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="金士顿128G闪存卡，迷你型USB3.0,金属外壳,18块"
        android:maxLines="2"
        android:textSize="14sp"
        android:layout_marginTop="7dp"
        android:ellipsize="end"
        android:textColor="@color/grey"
        android:layout_below="@id/tv_content_evaluate"
        android:layout_alignLeft="@id/tv_name_evaluate"/>
    <View
        android:layout_below="@id/tv_commodity_evaluate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#f0f0f0"
        />
</RelativeLayout>