<?xml version="1.0" encoding="utf-8"?>
<!--买过的-->
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:id="@+id/rl_parent">
            <ImageView
                android:id="@+id/iv_boughtHistory"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/head"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金士顿128G闪存卡，迷你型USB3.0,金属外壳,18块"
                android:maxLines="2"
                android:textSize="14sp"
                android:layout_toRightOf="@id/iv_boughtHistory"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:textColor="@color/grey"
                />
            <TextView
                android:id="@+id/tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_alignLeft="@id/tv_title"
                android:layout_marginTop="14dp"
                android:layout_below="@id/tv_title"
                android:textSize="14sp"
                android:textColor="@color/orangered"/>
            <TextView
                android:id="@+id/tv_priceBoughtHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:layout_alignBottom="@id/tv_temp"
                android:layout_toRightOf="@id/tv_temp"
                android:layout_marginLeft="2dp"
                android:textSize="17sp"
                android:textColor="@color/orangered"/>
            <TextView
                android:id="@+id/tv_evaluateOrNot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看评价"
                android:layout_alignBottom="@id/tv_temp"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:padding="3dp"
                android:background="@drawable/button_border"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/tv_temp2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易日期："
                android:layout_alignBottom="@id/iv_boughtHistory"
                android:layout_toRightOf="@id/iv_boughtHistory"
                android:layout_alignLeft="@id/tv_temp"
                android:textSize="12sp"
                android:padding="3dp"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1998/12/20"
                android:layout_alignBottom="@id/tv_temp2"
                android:layout_toRightOf="@id/tv_temp2"
                android:layout_marginLeft="4dp"
                android:textSize="12sp"
                android:padding="3dp"
                android:textColor="@color/grey"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>