<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/cl_aCommodity_loadOK"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/whitesmoke"
    tools:context=".MainActivity">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/ab_appbar_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/ctl_CollapsingToolbarLayout_commodity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/none_color"
                android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">
                <!--contentScrim：趋于折叠状态及折叠后的背景色
                layout_scrollFlags：scroll 随着内容一起滚动，exitUntilCollapsed随着滚动完成折叠保留在界面上-->
                <ImageView
                    android:id="@+id/iv_aCommodity_bigImg"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:src="@drawable/head"
                    android:scaleType="centerCrop"/>
                <android.support.v7.widget.Toolbar
                    android:id="@+id/t_title_commodity"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    >
                </android.support.v7.widget.Toolbar>

                <!--layout_collapseMode：折叠过程折叠模式-->


            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.6"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/tv_aCommodity_lastImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/last_img"
                                    android:textSize="30sp"
                                    android:textColor="@color/img_isNotHaveOther"/>
                                <TextView
                                    android:id="@+id/tv_aCommodity_imgMenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="3/4"
                                    android:layout_marginLeft="7dp"
                                    android:layout_marginRight="7dp"
                                    android:textSize="18sp"/>
                                <TextView
                                    android:id="@+id/tv_aCommodity_nextImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/next_img"
                                    android:textSize="30sp"
                                    android:textColor="@color/img_havaOther"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">
                                <android.support.v7.widget.RecyclerView
                                    android:id="@+id/rv_aCommodity_imgs"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                </android.support.v7.widget.RecyclerView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--商品详情部分-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    android:layout_marginTop="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_aCommodity_title"
                            android:text="金士顿128G闪存卡，迷你型USB3.0,金属外壳,18块"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:textSize="16sp"
                            android:layout_marginTop="8dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="8dp"
                            android:textColor="@color/black"
                            android:ellipsize="end"/>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/tv_temp3"
                                android:text="¥"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/orangered"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/tv_aCommodity_price"
                                android:text="66"
                                android:layout_marginLeft="3dp"

                                android:layout_alignBottom="@id/tv_temp3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/orangered"
                                android:layout_toRightOf="@id/tv_temp3"/>
                            <TextView
                                android:id="@+id/tv_aCommodity_date"
                                android:text="2007-5-78"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:textColor="@color/grey"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="10dp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="10dp"
                                android:background="@drawable/button_border">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="♫ 买下"
                                    android:textSize="20sp"/>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/ll_concernProduct"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/button_border">
                                <ImageView
                                    android:id="@+id/iv_aCommodity_concernIcon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20sp"
                                    android:src="@drawable/like_empty32"
                                    />
                                <TextView
                                    android:id="@+id/tv_aCommodity_concernNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4"
                                    android:layout_marginLeft="3dp"
                                    android:textSize="21sp"/>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:background="#f0f0f0"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="详情"
                            android:textSize="14sp"
                            android:layout_marginLeft="12dp"
                            />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_margin="8dp"
                            android:background="#f5f5f5"
                            />
                        <TextView
                            android:id="@+id/tv_aCommodity_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="刚抢的小米8 6+128 低价出手，手快有"
                            android:textSize="19sp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginBottom="20dp"
                            />
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--卖家资料部分-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    android:layout_marginTop="30dp"
                    app:cardCornerRadius="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/civ_headSeller_commodity"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="10dp"
                                android:src="@drawable/head"
                                android:layout_centerVertical="true"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/tv_nameSeller_commodity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="李嘉图·M·LU"
                                android:textSize="21sp"
                                android:layout_toRightOf="@id/civ_headSeller_commodity"
                                android:layout_marginBottom="9dp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"
                                android:layout_marginLeft="12dp"/>
                            <ImageView
                                android:id="@+id/iv_sexSeller_commodity"
                                android:layout_width="wrap_content"
                                android:layout_height="21sp"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/tv_nameSeller_commodity"
                                android:layout_marginBottom="9dp"
                                android:src="@drawable/boy32"/>
                            <Button
                                android:id="@+id/b_concern_other"
                                android:layout_width="62dp"
                                android:layout_height="35dp"
                                android:text="关注"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="20dp"
                                android:background="@drawable/button_border"
                                android:padding="3dp"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="100dp"
                            android:layout_marginRight="20dp"
                            android:background="#eeeeee" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">
                            <include layout="@layout/include_bill_commodity"></include>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--留言部分-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    android:layout_marginTop="35dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="留言"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_leaveMessageNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:text="0"
                                android:textColor="@color/skyblue"
                                android:textSize="14sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="4dp"
                                android:layout_toLeftOf="@id/tv_leaveMessageNum"
                                android:layout_alignBottom="@id/tv_leaveMessageNum"
                                android:text="全部"
                                android:textColor="@color/skyblue"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="12dp"
                            android:background="#f0f0f0" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_commodity_evaluate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layoutManager="android.support.v7.widget.LinearLayoutManager"/>

                        <TextView
                            android:id="@+id/tv_comment"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_marginBottom="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:background="@drawable/border_blue"
                            android:gravity="center"
                            android:text="写留言"
                            android:textColor="@color/skyblue"
                            android:textSize="17sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <!-- 相似推荐部分-->
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/AppTheme"
                    android:layout_marginTop="35dp"
                    app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="20dp"
                            android:gravity="center_vertical">
                            <TextView
                                android:id="@+id/tv_temp_commond"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="相似推荐"
                                android:textSize="16sp"
                                android:layout_centerHorizontal="true"
                                />
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/tv_temp_commond"
                                android:src="@drawable/cut_left32"
                                android:layout_marginRight="10dp"
                                android:layout_centerVertical="true"/>
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/tv_temp_commond"
                                android:src="@drawable/cut_right32"
                                android:layout_marginLeft="10dp"
                                android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rv_commodity_command"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ProgressBar
            android:id="@+id/pb_aCommodity_loadIng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_aCommodity_loadFail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="加载商品信息失败,请检查网络后重试"
            android:textSize="20sp"
            android:textColor="@color/grey"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>