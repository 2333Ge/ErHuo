<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        app:cardCornerRadius="7dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:id="@+id/rl_parent">
            <ImageView
                android:id="@+id/iv_soldHistory"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/head"
                android:scaleType="centerCrop"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_nameSoldHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李嘉图"
                android:textColor="@color/gray"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:layout_toRightOf="@id/iv_soldHistory"/>
            <TextView
                android:id="@+id/tv_timeSoldHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012-5-7"
                android:textColor="@color/grey"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>
            <TextView
                android:id="@+id/tv_contentSoldHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="好评"
                android:layout_below="@id/tv_nameSoldHistory"
                android:layout_alignLeft="@id/tv_nameSoldHistory"
                android:layout_marginTop="7dp"
                android:textSize="17sp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tv_evaluateType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认评价"
                android:layout_below="@id/tv_nameSoldHistory"
                android:layout_alignLeft="@id/tv_timeSoldHistory"
                android:layout_alignTop="@id/tv_contentSoldHistory"
                android:textSize="11sp"
                android:padding="3dp"
                android:background="@drawable/button_border"
                android:textColor="@color/grey"/>
            <TextView
                android:id="@+id/tv_commoditySoldHistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金士顿128G闪存卡，迷你型USB3.0,金属外壳,18块"
                android:maxLines="2"
                android:textSize="14sp"
                android:layout_marginTop="7dp"
                android:ellipsize="end"
                android:textColor="@color/grey"
                android:layout_below="@id/tv_contentSoldHistory"
                android:layout_alignLeft="@id/tv_nameSoldHistory"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>