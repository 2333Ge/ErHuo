<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#dde1ee" >

    <de.hdodenhof.circleimageview.CircleImageView
    	android:id="@+id/civ_headLogin"
    	android:scaleType="centerCrop"
    	android:layout_width="64dp"
    	android:layout_height="64dp"
    	 android:layout_marginTop="70dp"
    	android:layout_centerHorizontal="true"
    	android:src="@drawable/head"/>
    <EditText 
        android:id="@+id/et_Num"
        android:hint="用户名"
        android:layout_width="match_parent"
        android:layout_height="44dip"
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_below="@id/civ_headLogin"
		android:layout_marginTop="20dip"
		android:textColor="@color/gray"
		android:textColorHint="@color/gray"
        />
    
    <EditText 
        android:id="@+id/et_Password"
        android:hint="密码"
        android:layout_width="match_parent"
        android:layout_height="44dip"        
        android:layout_marginLeft="50dip"
        android:layout_marginRight="50dip"
        android:layout_marginTop="10dip"
        android:layout_below="@id/et_Num"
        android:inputType="textPassword"
		android:textColor="@color/gray"
		android:textColorHint="@color/gray"
        />
     
     <Button 
         android:id="@+id/b_Login"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@id/et_Password"
         android:layout_alignLeft="@id/et_Num"
         android:layout_alignRight="@id/et_Num"
         android:layout_marginTop="35dip"
         android:text="登录"
         android:textColor="@android:color/white"
         android:background="@color/gray"/>
     
     <Button
         android:id="@+id/b_fetchPassword"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:gravity="bottom|center_horizontal"
         android:text="找回密码"
         android:textSize="7pt"
         android:textColor="#333355"
         android:layout_marginLeft="40dp"
     	 android:background="@null"
         />

     
     <Button 
         android:id="@+id/b_changeRegister"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentRight="true"
         android:text="注册账号"
         android:textSize="7pt"
         android:textColor="#333355"
         android:layout_marginRight="40dp"
         android:gravity="bottom|center_horizontal"
     	 android:background="@null"
         />
     
     <TextView 
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/b_Login"
         android:text="|"
         android:textSize="7pt"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:gravity="bottom"/>
   

</RelativeLayout>